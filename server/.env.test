# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Test Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/portfolio_test?schema=public"

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_for_testing_only
JWT_REFRESH_SECRET=test_jwt_refresh_secret_key_for_testing_only
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CLIENT_URL=http://localhost:3000

# Rate Limiting (more lenient for tests)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX_REQUESTS=100

# Email Configuration (use Ethereal for tests)
EMAIL_SERVICE=ethereal
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=test@ethereal.email
EMAIL_PASS=test_password
EMAIL_FROM=noreply@portfolio-test.com
EMAIL_FROM_NAME=Portfolio Test

# File Upload Configuration
UPLOAD_MAX_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,image/webp
UPLOAD_DIR=uploads/test

# Security Configuration
BCRYPT_ROUNDS=10
SESSION_SECRET=test_session_secret_key_for_testing_only

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=logs/test.log

# API Configuration
API_VERSION=v1
API_PREFIX=/api